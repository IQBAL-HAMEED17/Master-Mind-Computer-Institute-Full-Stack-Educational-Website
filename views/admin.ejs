<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ABC Computer Institute</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
    }

    header {
      background: #0078D7;
      color: white;
      padding: 15px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      font-size: 22px;
      margin: 0;
    }

    header a {
      color: white;
      text-decoration: none;
      background: #005bb5;
      padding: 6px 12px;
      border-radius: 5px;
    }

    .container {
      max-width: 1100px;
      margin: 30px auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

    h2 {
      color: #333;
      margin-bottom: 10px;
    }

    form {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-bottom: 30px;
    }

    form input, form textarea, form button {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
    }

    form button {
      grid-column: span 2;
      background: #0078D7;
      color: white;
      border: none;
      cursor: pointer;
    }

    form button:hover {
      background: #005bb5;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    table th, table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    table th {
      background: #0078D7;
      color: white;
    }

    table td img {
      width: 60px;
      height: 60px;
      border-radius: 6px;
      object-fit: cover;
    }

    .section {
      margin-bottom: 50px;
    }

    .delete-btn {
      background: #e74c3c;
      color: white;
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <header>
    <h1>Admin Dashboard</h1>
    <a href="/logout">Logout</a>
  </header>

  >
    <!-- ADD LAPTOP SECTION -->
    <div class="section">
      <h2>Add New Laptop</h2>
      <form action="/home/admin" method="POST" enctype="multipart/form-data">
        <!-- <input type="text" name="name" placeholder="Laptop Name" required> -->
        <input type="number" name="price" placeholder="Price (₹)" required>
        <input type="number" name="discount" placeholder="Discount (₹)">
        <textarea name="details" rows="3" placeholder="Description"></textarea>
        <textarea placeholder="Add features of this laptop"name="features"></textarea>
        <input type="file" name="image">
        <button type="submit">Add Laptop</button>
      </form>
    </div>

     <!-- VIEW ENROLLMENTS -->
    <div class="section">
      <h2>Student Enrollments</h2>
      <table>
        <tr>
          <th>Name</th>
          <th>Course</th>
          <th>Email</th>
          <th>Date</th>
        </tr>
       
      </table>
    </div>

  </div>
    <!-- VIEW LAPTOPS -->
    <div class="section">
      <h2>All Laptops</h2>
      <table>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Discount</th>
          <th>Action</th>
        </tr>
         <% avaiLaptops.forEach(laptop => { %>
        <tr>
          <td><img src="/uploads/<%= laptop.image %>" alt=""></td>
          <td><%= laptop.details %><%= laptop.features %></td>
          <td>₹<%= laptop.price %></td>
          <td><%= laptop.discount %></td>
          <td>
            <form action="/admin/laptops/delete/<%= laptop._id %>" method="POST">
              <button class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
       

   
</body>
</html>
